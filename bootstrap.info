name = Bootstrap
description = Base front-end theme based on Bootstrap.
core = 7.x
engine = phptemplate


; Regions
;
; We rely on the default regions, but we can set the main content area up to use
; any number of 'sidebars' by adding their names below, their default grid-width
; to the settings array, and by adding them to the page.tpl.php file. 
;
; Note that if you define the regions here (or in a child theme), you will need
; to redefine ALL of Drupal's default regions.
;regions[content] = Content
;regions[sidebar_first] = First Sidebar
;regions[sidebar_second] = Second Sidebar
;regions[sidebar_third] = Third Sidebar

; Settings
;
settings[bootstrap_content_size] = 8
settings[bootstrap_sidebar_first_size] = 4
settings[bootstrap_sidebar_second_size] = 4


; Scripts
;
scripts[] = bootstrap.min.js
; Since the plugin it provides doesn't work (or doesn't work in this context,
; don't include it):
;scripts[] = bootstrap/js/bootstrap-alerts.js


; Stylesheets
;
; Bootstrap defaults:
stylesheets[screen][] = bootstrap.css
stylesheets[all][] = system.messages.css
stylesheets[all][] = system.menus.css
stylesheets[all][] = shortcut.css


; Support shortcut module links
settings[shortcut_module_link] = 1


version = "7.x-1.0-alpha1"
core = "7.x"
